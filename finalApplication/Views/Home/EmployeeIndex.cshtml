@{
    //ViewData["Title"] = "Employee Page";
    System.Data.DataView data = ViewBag.DataEmployee;

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <!-- ======= Mobile nav toggle button ======= -->
    <i class="bi bi-list mobile-nav-toggle d-xl-none"></i>

    <!-- ======= Header ======= -->
    <header id="header">
        <div class="d-flex flex-column">
            @foreach (System.Data.DataRowView rowView in data)
            {
                System.Data.DataRow row = rowView.Row;
                <div class="profile">
                    <img src="assets/img/profile-img.jpg" alt="" class="img-fluid rounded-circle">
                    <h1 class="text-light"><a href="index.html">@row["EMP_NAME"]</a></h1>
                    <div class="social-links mt-3 text-center">
                        <a href="#" class="facebook"><i class="bx bxl-facebook"></i></a>
                        <a href="#" class="linkedin"><i class="bx bxl-linkedin"></i></a>
                    </div>
                </div>
            }
                <nav id="navbar" class="nav-menu navbar">
                    <ul>
                        <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><i class="bx bx-home"> <span>Home</span></i></a></li>
                        <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><i class="bx bx-home"><span> My Table</span></i></a></li>
                    </ul>
                </nav><!-- .nav-menu -->
            </div>
    </header><!-- End Header -->
    <!-- ======= Hero Section ======= -->
    <section class="d-flex flex-column justify-content-center align-items-center">
        <div class="hero-container" data-aos="fade-in">
            @foreach (System.Data.DataRowView rowView in data)
            {
                System.Data.DataRow row = rowView.Row;
                <h1>@row["EMP_NAME"]</h1>
                <p>I'm @row["JOP_TITEL"]</p>
            }
            </div>
            
    </section><!-- End Hero -->

    <main id="main">
        <section id="about" class="about d-flex flex-column justify-content-center align-items-center">
            <div class="container">

                <div class="section-title">
                    <h2>About</h2>
                    <p> Information about him</p>
                </div>

                <div class="row">
                    <div class="col-lg-4" data-aos="fade-right">
                        <img src="assets/img/profile-img.jpg" class="img-fluid" alt="">
                    </div>
                    <div class="col-lg-8 pt-4 pt-lg-0 content" data-aos="fade-left">
                        <h3>Programmer &amp; Web Developer.</h3>
                        <p class="fst-italic">
                            *******************
                        </p>
                        @foreach (System.Data.DataRowView rowView in data)
                        {
                            System.Data.DataRow row = rowView.Row;
                            <div class="row">
                                <div class="col-lg-6">
                                    <ul>
                                        <li><i class="bi bi-chevron-right"></i> <strong>Birthday:</strong> <span>@row["EMP_DOB"] </span></li>
                                        <li><i class="bi bi-chevron-right"></i> <strong>Phone:</strong> <span>@row["PHONE"] </span></li>
                                        <li><i class="bi bi-chevron-right"></i> <strong>City:</strong> <span>@row["CITY"]</span></li>
                                    </ul>
                                </div>
                                <div class="col-lg-6">
                                    <ul>
                                        <li><i class="bi bi-chevron-right"></i> <strong>Age:</strong> <span>@row["AGE"]</span></li>
                                        <li><i class="bi bi-chevron-right"></i> <strong>Education Degree:</strong> <span>@row["EDU_DEGREE"]</span></li>
                                    </ul>
                                </div>
                            </div>
                        }
                        </div>
                </div>
            </div>
        </section><!-- End About Section -->
        <!-- ======= Attendence Table ======= -->
        <section id="attendance" class="services d-flex flex-column justify-content-center align-items-center">
            <div class="container">

                <div class="section-title">
                    <h3>My Table</h3>
                </div>

                <div class="row">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th scope="col">Date</th>
                                <th scope="col">Username</th>
                                <th scope="col">Name</th>
                                <th scope="col">Hours</th>
                                <th scope="col">Detailed Time</th>
                                <th scope="col">Status</th>
                                <th scope="col">Add Leaving</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (data != null)
                            {
                                @foreach (System.Data.DataRowView rowView in data)
                                {
                                    System.Data.DataRow row = rowView.Row;
                                    <tr data-id='@row["EMP_ID"]'>
                                        <td>@row["DATE"]</td>
                                        <td>@row["USER_NAME"]</td>
                                        <td>@row["EMP_NAME"]</td>  <!-- لازم اعمل فنكشن مشان اطلع عدد الساعات منها -->
                                        <td>@row["START_HOUR"]/ @row["LEAVING_HOUR"]</td>
                                        <td>@row["START_HOUR"]- @row["LEAVING_HOUR"]</td>
                                        <td>@row["EMP_STATUS"]</td>
                                        <td> <input type="text" class="form-control" id="input2" placeholder="Add Leaving" name="Leave" /></td>
                                        <td><i class="fa fa-edit" style="font-size: 48px; color:blue"></i></td>
                                    </tr>
                                }
                            }


                        </tbody>
                    </table>
                </div>

            </div>
        </section><!-- End Services Section -->

    </main><!-- End #main -->

</body>
